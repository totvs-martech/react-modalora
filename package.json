{
  "name": "react-modalora",
  "version": "1.0.0",
  "private": true,
  "description": "Another highly customizable logic component for modals using React Portal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/totvs-store/react-modalora.git"
  },
  "bugs": {
    "url": "https://github.com/totvs-store/react-modalora/issues"
  },
  "homepage": "https://github.com/totvs-store/react-modalora#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-destructuring": "^7.1.3",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.19",
    "cross-env": "^5.2.0",
    "eslint": "^5.7.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "generate-changelog": "^1.7.1",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "jest-dom": "^2.1.0",
    "jest-serializer-html": "^5.0.0",
    "prop-types": "^15.6.2",
    "react-testing-library": "^5.2.0"
  },
  "dependencies": {
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint"
    }
  },
  "scripts": {
    "build:clean": "rm -rf dist/*",
    "build:babel": "babel -d dist -s --ignore *.test.js src",
    "build:copy-readme": "cp README.md dist",
    "build:create-dist": "mkdir -p dist",
    "build:generate-package": "node ./bin/generate-package.js",
    "build": "$npm_execpath run build:clean && $npm_execpath run build:create-dist && $npm_execpath run build:copy-readme && $npm_execpath run build:generate-package && cross-env NODE_ENV=production $npm_execpath run build:babel",
    "coverage": "$npm_execpath run test -- --coverage",
    "lint": "eslint src",
    "version:major": "cross-env VERSION=major $npm_execpath run version",
    "version:minor": "cross-env VERSION=minor $npm_execpath run version",
    "version:patch": "cross-env VERSION=patch $npm_execpath run version",
    "version": "changelog -M && git add CHANGELOG.md && git commit -m 'docs: updated CHANGELOG.md' && npm version $VERSION && git push origin && git push origin --tags",
    "test": "jest",
    "test:watch": "$npm_execpath run test -- --watch",
    "watch": "$npm_execpath run build:babel -- -w"
  }
}
